<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!-- mvn mybatis-generator:generate -->
    <context id="generate" targetRuntime="MyBatis3">
        <property name="suppressAllComments" value="true"/>
        <property name="useActualColumnNames" value="false"/>


        <!-- 配置插件 -->
        <plugin type="club.usql.mybatis.generator.plugin.ExtXMLPlugin"/>

        <commentGenerator>
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <!-- 配置数据库连接 -->
        <jdbcConnection driverClass="org.gjt.mm.mysql.Driver"
                        connectionURL="jdbc:mysql://192.168.1.118:3306/interest"
                        userId="root" password="root">
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- 配置model生成位置 -->
        <javaModelGenerator targetPackage="com.dao.model"
                            targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- 配置sqlmap生成位置 -->
        <sqlMapGenerator targetPackage="com.dao.mapper"
                         targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!-- 配置mapper接口生成位置 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.dao.mapper"
                             targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>


        <table tableName="test" domainObjectName="TestDO"
               enableCountByExample="true" enableUpdateByExample="true"
               enableDeleteByExample="true" enableSelectByExample="true"
               selectByExampleQueryId="true">
            <!--<columnOverride column="ID" property="id" javaType="Long" jdbcType="BIGINT"/>-->
            <!--<columnOverride column="gmt_create" property="gmtCreate" javaType="java.util.Date" jdbcType="TIMESTAMP"/>-->
            <!--<columnOverride column="gmt_modified" property="gmtModified" javaType="java.util.Date" jdbcType="TIMESTAMP"/>-->
            <columnOverride column="GUARDIAN_CERT_NO" property="guardianCertNo" javaType="java.lang.String" jdbcType="VARCHAR" typeHandler="club.usql.mybatis.generator.handler.AESCryptTypeHandler" />
            <columnOverride column="GUARDIAN_PHONE" property="guardianPhone" javaType="java.lang.String" jdbcType="VARCHAR" typeHandler="club.usql.mybatis.generator.handler.AESCryptTypeHandler" />
        </table>
    </context>
</generatorConfiguration>
